Checks: >
  clang-analyzer-*,
  bugprone-*,
  cppcoreguidelines-*,
  misc-*,
  modernize-*,
  -modernize-use-trailing-return-type,
  performance-*,
  readability-*

WarningsAsErrors: "clang-analyzer-*, bugprone-*"

HeaderFilterRegex: '^(src|test)/(?!.*(googletest|external|build)).*'

FormatStyle: none

CheckOptions:
  - {key: modernize-use-nullptr.NullMacros, value: 'NULL'}
  - {key: readability-identifier-naming.VariableCase, value: lower_case}
  - {key: readability-identifier-naming.ConstantCase, value: lower_case}
  - {key: readability-identifier-naming.ConstexprVariableCase, value: UPPER_CASE}
  - {key: readability-identifier-naming.FunctionCase, value: camelBack}
  - {key: readability-identifier-naming.ParameterCase, value: lower_case}
  - {key: cppcoreguidelines.LanguageStandard, value: c++17}
# - {key: readability-identifier-naming.ClassCase, value: CamelCase}
# - {key: readability-identifier-naming.NamespaceCase, value: Lower}
# - {key: readability-identifier-naming.StructCase, value: CamelCase}
